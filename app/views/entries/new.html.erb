<div>
	<div class="col-md-12" style="text-align: center">
		<h1>Daily Entry</h1>
		<%= form_with scope: :entries, url: entries_path, local: true do |f| %>
		 <% if @entries.errors.any? %>
		    <div id="error_explanation" style="text-align: center">
		      <h2>
		        <%= pluralize(@entries.errors.count, "error") %> prohibited
		        this article from being saved:
		      </h2>
		      <ul>
		        <% @entries.errors.full_messages.each do |msg| %>
		          <li><%= msg %></li>
		        <% end %>
		      </ul>
		    </div>
		  <% end %>



		<p>
			<%= f.label :title %><br>
			<%= f.text_field :title %>
		</p>

		<p>
			<%= f.label :writing %><br>
			<%= f.text_area :writing %>
		</p>

		<p>
			<%= f.submit %>
		</p>
		<% end %>
		<%= link_to 'Back', entries_path %>
	</div>
</div>